<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/Head.ejs") %>
</head>
<body>
    <%- include("../partials/Nav.ejs") %>

    <section class="container-fluid mt-5" >
        <div class="row ">
            <div class="">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0" style="width: 500px;">
                    <div class="card-header">Profile Picture</div>
                    <div class="card-body text-center">
                        <img class="img-account-profile  circle mb-2"
                            src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                        <!-- Profile picture button-->
                        <button class="btn btn-primary" type="button">Upload new image</button>
                    </div>
                </div>
            </div>
            <div class="">
                <!-- Account details card-->
                <div class="card mb-4 " style="width: 500px;">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
    
                        <form action="">
                            <div class="mb-3">
                                <label class="small mb-1 p-3" for="inputUsername">Username (how your name will appear to other
                                    users on the site)</label>
                                <input class="form-control" id="inputUsername" type="text"
                                    value="">
                            </div>
    
                    </div>
                    <!-- Form Row-->
                    <div class="row gx-3 mb-3">
                        <!-- Form Group (first name)-->
                        <div class="col-md-6 p-3">
                            <label class="small mb-1 " for="inputFirstName">First name</label>
                            <input class="form-control" id="inputFirstName" type="text"  
                                value=" ">
                        </div>
                        <!-- Form Group (last name)-->
                        <div class="col-md-6 p-3">
                            <label class="small mb-1" for="inputLastName">Last name</label>
                            <input class="form-control" id="inputLastName" type="text"  
                                value=" ">
                        </div>
                    </div>
                    <!-- Form Row        -->
                    <div class="row gx-3 mb-3">
                         
                       
                        <!--   (location)-->
                        <div class="col-md-12 p-3">
                            <label class="small mb-1 " for="inputLocation">Location</label>
                            <input class="form-control " id="inputLocation" type="text" placeholder="Egypt,cai"
                                >
                        </div>
                    </div>
                    <!--   (email address)-->
                    <div class="mb-3 p-3">
                        <label class="small mb-1" for="inputEmailAddress">Email address</label>
                        <input class="form-control" id="inputEmailAddress" type="email"
                         placeholder="name@gmail.com">
                    </div>
                    <!-- Form Row-->
                    <div class="row gx-3 mb-3 ">
                        <!-- F (phone number)-->
                        <div class="col-md-6 p-3">
                            <label class="small mb-1" for="inputPhone">Phone number</label>
                            <input class="form-control" id="inputPhone" type="tel" value=" ">
                        </div>
                        <!-- Form Group (birthday)-->
                        <div class="col-md-6 p-3">
                            <label class="small mb-1" for="inputBirthday">Birthday</label>
                            <input class="form-control" id="inputBirthday" type="text" name="birthday"
                                placeholder="06/10/1988">
                        </div>
                    </div>
                    <!-- Save changes button-->
                    <button class="btn btn-primary" type="button">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    


     <!-- end -->
     <%- include("../partials/Top_Function.ejs") %>
    
</body>
</html>