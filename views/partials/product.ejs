<div class="col-2 col-sm-2  mb-3 " style="margin-right:100px ;">
    <!-- card 1 -->
    <div class="card rounded bg-light border">

        <div class="mobile-image-wrapper-1 img-hover-zoom img-hover-zoom--quick-zoom">
            <a href="product.ejs">
                <img src="<%= product.Image %>" class="card-img-top" alt="<%= product.pname %> img">
            </a>
        </div>

        <div class="card-body pb-3">
            <div class="d-flex justify-content-between mt-3 mb-2">

                <h5><%= product.pname %></h5>
            </div>

            <div class="mb-2">
                <h5 class=" text-muted "><%= product.Price%> EGP</h5>
            </div>

            <div class="mt-3">
                <a class="btn btn-dark " id="delete" data-id="<%= product._id %>" > Delete</a>
            </div>
            <div class="mt-3">
                <a class="btn btn-dark " href="/edit/<%= product._id %>" id=""> Edit</a>
            </div>
        </div>
    </div>
</div>
<div class="modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Modal body text goes here.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>